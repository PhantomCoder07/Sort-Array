#include <stdio.h>
int ascending (int a[], int n)
{
    for (int i=0; i<n; i++)
    {
        for (int j=i+1; j<n; j++)
        {
            if (a[i]>a[j])
            {
                int t=a[i];
                a[i]=a[j];
                a[j]=t;
            }
        }
    }
}
int main()
{
    int i,j,n;
    printf ("Enter the size: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
    }
    ascending(arr,n);
    printf ("The numbers in ascending order: ");
    for (i=0; i<n; i++)
    {
        printf ("%d ",arr[i]);
    }
    return 0;
}
