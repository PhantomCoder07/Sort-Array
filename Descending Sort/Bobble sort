#include <stdio.h>
int main()
{
    int i,j,n,t;
    printf ("Enter the size: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
    }
    for (i=0; i<n; i++)
    {
        for (j=i+1; j<n; j++)
        {
            if (arr[i]<arr[j])
            {
                t=arr[i];
                arr[i]=arr[j];
                arr[j]=t;
            }
        }
    }
    printf ("The numbers in descending order: ");
    for (i=0; i<n; i++)
    {
        printf ("%d ",arr[i]);
    }
    return 0;
}
